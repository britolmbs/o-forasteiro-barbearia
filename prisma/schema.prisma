generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id @default(uuid())
  name               String
  email              String
  endereco           String?
  password           String
  stripe_customer_id String?
  created_at         DateTime?     @default(now())
  updated_at         DateTime?     @default(now())
  haircuts           Haircut[]
  service            Service[]
  subscriptions      Subscription?

  @@map("users")
}

model Subscription {
  id         String    @id
  status     String
  priceId    String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  userId     String    @unique
  user       User      @relation(fields: [userId], references: [id])

  @@map("subscriptions")
}

model Haircut {
  id         String    @id @default(uuid())
  name       String
  price      Float
  status     Boolean   @default(true)
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  user_id    String
  user       User      @relation(fields: [user_id], references: [id])
  services   Service[]

  @@index([user_id], map: "haircuts_user_id_fkey")
  @@map("haircuts")
}

model Service {
  id         String    @id @default(uuid())
  customer   String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  haircut_id String
  user_id    String
  haircut    Haircut   @relation(fields: [haircut_id], references: [id])
  user       User      @relation(fields: [user_id], references: [id])

  @@index([haircut_id], map: "services_haircut_id_fkey")
  @@index([user_id], map: "services_user_id_fkey")
  @@map("services")
}
